<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title%></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <style>
        
    </style>
</head>

<body>


    <div class="mainParent">
        <%- include('../partials/userSideBar.ejs') %>
        
        <div class="mainContent">
            <%- include('../partials/userNavbar.ejs') %>

            <div class="mainContentDays mt-3">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12">


                            <!-- Accordion Başlangic -->
                            <% ogunler.forEach(function(item) { %>
                            <div class="accordion accordion-flush" id="accordionFlushExample">

                                <div class="accordion-item mb-2">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button collapsed" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#<%=item.gun%>"
                                            aria-expanded="false" aria-controls="<%=item.gun%>">
                                            <%=item.tarih%> | <%=item.gun%> 
                                        </button>
                                    </h2>
                                    <div id="<%=item.gun%>" class="accordion-collapse collapse"
                                        data-bs-parent="#accordionFlushExample">
                                        <div class="accordion-body">



                                            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                                <li class="nav-item" role="presentation">
                                                  <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home<%=item.gun%>" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Sabah</button>
                                                </li>
                                                <li class="nav-item" role="presentation">
                                                  <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile<%=item.gun%>" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Öglen</button>
                                                </li>
                                                <li class="nav-item" role="presentation">
                                                  <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact<%=item.gun%>" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Akşam</button>
                                                </li>
                                               
                                              </ul>
                                              <div class="tab-content" id="pills-tabContent">
                                                <div class="tab-pane fade show active" id="pills-home<%=item.gun%>" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
                                                    
                                                    <% if (item.Sabah && item.Sabah.length > 0) { %>
                                                        <% item.Sabah.forEach(function(item1) { %>
                                                            <%= item1 %> <br>
                                                        <% }); %>
                                                    <% } else { %>
                                                        Öğün Girilmemiş Pt'niz ile iletişime geçiniz.
                                                    <% } %>
                                                    
                                                    
                                                </div>
                                                <div class="tab-pane fade" id="pills-profile<%=item.gun%>" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">

                                                    <% if (item.Oglen && item.Oglen.length > 0) { %>
                                                        <% item.Oglen.forEach(function(item1) { %>
                                                            <%= item1 %>
                                                        <% }); %>
                                                    <% } else { %>
                                                        Öğün Girilmemiş Pt'niz ile iletişime geçiniz.
                                                    <% } %>

                                                </div>
                                                <div class="tab-pane fade" id="pills-contact<%=item.gun%>" role="tabpanel" aria-labelledby="pills-contact-tab" tabindex="0">
                                                    
                                                    <% if (item.Aksam && item.Aksam.length > 0) { %>
                                                        <% item.Aksam.forEach(function(item1) { %>
                                                            <%= item1 %>
                                                        <% }); %>
                                                    <% } else { %>

                                                        Öğün Girilmemiş Pt'niz ile iletişime geçiniz.

                                                    <% } %>
                                                    

                                                </div>
                                              </div>





                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                            <!-- Accordion Bitiş -->




                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>